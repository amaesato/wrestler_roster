<div>
<h2>Team Roster</h2>

<% if @wrestlers.any? %>

  <ul>
    <% @wrestlers.each do |wrestler| %>
      <li><%= link_to wrestler.name, wrestler_path(wrestler) %></li>
    <% end %>
  </ul>
<% else %>
  <h3>There are no wrestlers in your Roster</h3>
<% end %>

<%= link_to 'Create Wrestler', new_wrestler_path %>
</div>
