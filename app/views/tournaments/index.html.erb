<h1><%= @wrestler.name %> - STATS</h1>

<% if @tournaments.any? %>
  <ul>
    <% @tournaments.each do |tournament| %>
      <li><%= tournament.name %> - <%= link_to 'show', wrestler_tournament_path(@wrestler, tournament) %> </li>
    <% end %>
  </ul>
<% else %>
  <h3><%= @wrestler.name %> has no stats <%= link_to 'Add STATS', new_wrestler_tournament_path(@wrestler) %></h3>
<% end %>

<%= link_to '<< Back', wrestler_path(@wrestler) %>
